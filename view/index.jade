extends layout

block body
  div(ng-controller='AppCtrl')
    div(ng-mouseleave="titler=0", ng-mouseover="titler=1")
      h2 fingerskier
        a(href="/", ng-show="titler") ^

    ul.nav.nav-tabs
      li(ng-class="activeAction('glean')")
        a(href='glean') gleanings
      li(ng-class="activeAction('blog')")
        a(href='blog') circumlocutive musings
      li(ng-class="activeAction('stash')")
        a(href='stash') code stash
      li(ng-class="activeAction('cv')")
        a(href='cv') C.V.

    {{msgs}}

    {{flarn}}

    div(ng-cloak, ng-switch='action[0]')
      div(ng-switch-when='glean')
        include glean
      div(ng-switch-when='blog')
        include blog
      div(ng-switch-when='stash')
        include stash
      div(ng-switch-when='cv')
        include cv

    pre#bottomPanel fingerskier v1.0

  script(src='lib/angular/angular.min.js')
  script(src='lib/angular/angular-bootstrap.min.js')
  script(src='lib/angular/angular-bootstrap-prettify.min.js')
  script(src='lib/angular/angular-loader.min.js')
  script(src='lib/angular/angular-resource.min.js')
  script(src='lib/angular/angular-sanitize.min.js')
  script(src='lib/jquery/js/jquery.min.js')
  script(src='lib/jquery/js/jquery-ui.min.js')
  script(src='lib/angular-ui/angular-ui.min.js')
  script(src='lib/angular-ui/angular-ui-ieshiv.min.js')
  script(src='lib/bootstrap/js/bootstrap.min.js')

  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/app.js')
